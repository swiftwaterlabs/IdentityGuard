@page "/user/access/{DirectoryId}/{UserId}"

<MudContainer Class="mt-16">
    <Loadable IsLoading="IsLoading">
        @if (IsUserLoaded)
        {
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h5">@UserName</MudText>
                    <MudText Typo="Typo.subtitle2">@DirectoryName</MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="StartReview">Start Review</MudButton>
                </MudCardHeader>
                <MudCardContent>
                    <MudTabs Elevation="1" Rounded="true" PanelClass="mt-6">
                        <MudTabPanel Text="General">
                             <IdentityGuard.Blazor.Ui.Components.AttributeCard Data="UserAttributes"/>
                        </MudTabPanel>
                        <MudTabPanel Text="Owned">
                            <DirectoryObjectCards Data="OwnedObjectsByType"/>
                        </MudTabPanel>
                        <MudTabPanel Text="Group Membership">
                            <DirectoryObjectCards Data="GroupMembershipByType"/>
                        </MudTabPanel>
                        <MudTabPanel Text="Roles">
                            <ApplicationRoleCards Data="ApplicationRolesByAssignmentType"/>
                        </MudTabPanel>
                    </MudTabs>

                </MudCardContent>
            </MudCard>
        }
    </Loadable>
</MudContainer>