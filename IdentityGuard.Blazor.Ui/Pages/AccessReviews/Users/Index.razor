@page "/accessreview/user"
@namespace IdentityGuard.Blazor.Ui.Pages.AccessReviews.Users

<MudContainer Class="mt-16">
	<MudButton OnClick="ShowUserSearch" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Search">
		Search Users
	</MudButton>

	<MudDialog @bind-IsVisible="IsSearchVisible">
		<TitleContent>
			<MudText Typo="Typo.h6">Search Users</MudText>
		</TitleContent>
		<DialogContent>
			<MudTextField @bind-Value="@SearchText" Label="Search" Variant="Variant.Outlined" />
			<MudButton OnClick="SearchUsers" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Search">
				Search
			</MudButton>
			<MudRadioGroup @bind-SelectedOption="SelectedUser">
				@foreach(var item in UserSearchResults)
				{
					<MudRadio Option="item">@item.DisplayName</MudRadio>
				}
			</MudRadioGroup>

		</DialogContent>
		<DialogActions>
			<MudButton OnClick="ShowUserAccessForSelectedUser" Variant="Variant.Filled" Color="Color.Primary">
				Ok
			</MudButton>
			<MudButton OnClick="CloseUserSearch" Variant="Variant.Filled" Color="Color.Secondary">
				Close
			</MudButton>
		</DialogActions>
	</MudDialog>
</MudContainer>