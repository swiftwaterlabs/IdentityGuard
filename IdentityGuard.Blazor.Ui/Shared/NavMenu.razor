@using IdentityGuard.Blazor.Ui.Pages
 
<PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);" />
<MudDivider Class="mb-4" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Main</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Dashboard">Dashboard</MudNavLink>

    @if (CanPerformAdminActions)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Admin</MudText>
        <MudNavLink Href="@Paths.Directories" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Domain">Directories</MudNavLink>
    }

    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Access Reviews</MudText>
    @if (CanViewUsers)
    {
        <MudNavLink Href="@Paths.UserAccessReviews" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.VerifiedUser">Users</MudNavLink>
    }
    <MudNavLink Href="@Paths.GroupAccessReviews" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Groups">Groups</MudNavLink>
    <MudNavLink Href="@Paths.ApplicationAccessReviews" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.SupervisedUserCircle">Applications</MudNavLink>

</MudNavMenu>