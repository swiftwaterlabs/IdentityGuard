@using IdentityGuard.Blazor.Ui.Pages
 
<PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);" />
<MudDivider Class="mb-4" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Main</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Dashboard">Dashboard</MudNavLink>

    @if(IsLoading)
    {
        <MudSkeleton Animation="Animation.Wave" Width="100%" Height="20px" />
    }

    @if (CanPerformAdminActions)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Admin</MudText>
        <MudNavLink Href="@Paths.Directories" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Domain">Directories</MudNavLink>
    }

    @if(CanPerformAccessReviews)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Governance</MudText>
        <MudNavLink Href="@Paths.AccessReviews" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.SupervisedUserCircle">Access Reviews</MudNavLink>
    }
    
    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Lifecycle Management</MudText>
    @if(CanManagePolicies)
    {
        <MudNavLink Href="@Paths.Policies" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Policy">Policies</MudNavLink>
    }
</MudNavMenu>