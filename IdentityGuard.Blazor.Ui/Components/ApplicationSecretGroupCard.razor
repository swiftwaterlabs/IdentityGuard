@using IdentityGuard.Shared.Models
<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudList>
            @foreach(var item in Data.OrderBy(i=>i.DisplayName))
            {
                <MudListItem>
                    <RemovableItem Type="@AccessReviewActionObjectTypes.ApplicationSecret" 
                            Id="@item.Id" 
                            Text="@item.DisplayName"
                            Typo="@Typo.subtitle1"
                            Disabled="@ReadOnly"
                            OnItemRemoved="OnItemRemoved"
                            OnItemAdded="OnItemAdded"/>
                    <MudText Typo="Typo.body1">Expires: @item.ExpiresAt</MudText>
            </MudListItem>
            }
        </MudList>
    </MudCardContent>
</MudCard>