<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudList>
            @foreach(var item in Data.OrderBy(i=>i.Name))
            {
                <MudListItem>
                     <RemovableItem Type="@(nameof(IdentityGuard.Shared.Models.ApplicationPermission))" 
                            Id="@item.Id" 
                            Text="@item.Name"
                            Typo="@Typo.subtitle1"
                            Disabled="@ReadOnly"/>
                    <MudText Typo="Typo.subtitle2">@item.Type</MudText>
                    <MudText Typo="Typo.body1">@item.DisplayName</MudText>
                </MudListItem>
            }
        </MudList>
    </MudCardContent>
</MudCard>
