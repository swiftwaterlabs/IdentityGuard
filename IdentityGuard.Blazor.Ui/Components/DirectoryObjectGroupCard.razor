<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudList>
            @foreach(var item in Data.OrderBy(i=>i.DisplayName))
            {
                <MudListItem>
                    <RemovableItem Type="@Type" 
                        Id="@item.Id" 
                        Text="@item.DisplayName"
                        Typo="@Typo.body1"
                        Disabled="@ReadOnly"/>
                </MudListItem>
            }
        </MudList>
    </MudCardContent>
</MudCard>
