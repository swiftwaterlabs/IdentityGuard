@using IdentityGuard.Shared.Models
<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudList>
            @foreach(var item in Data.OrderBy(i=>i.AssignedTo.DisplayName))
            {
                @if(!ShowDefaultAccess && item.Role.Id == IdentityGuard.Shared.Models.Role.DefaultAccessId)
                {
                    // Show Nothing
                }
                else
                {
                    <MudListItem>
                         
                        <MudText Typo="Typo.subtitle1">@item.AssignedTo.DisplayName</MudText>
                        <RemovableItem Type="@AccessReviewActionObjectTypes.ApplicationRoleMembership" 
                            Id="@item.Id" 
                            Text="@item.Role.DisplayName"
                            Typo="@Typo.body1"
                            Disabled="@ReadOnly"
                            OnItemRemoved="OnItemRemoved"
                            OnItemAdded="OnItemAdded"/>

                        @if(item.AssignmentType == IdentityGuard.Shared.Models.ObjectTypes.Group)
                        {
                            <MudText Typo="Typo.body2">From: @item.AssignedBy.DisplayName</MudText>
                        }
                    </MudListItem>
                }
            }
        </MudList>
    </MudCardContent>
</MudCard>