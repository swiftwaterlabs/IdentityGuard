@using IdentityGuard.Shared.Models
<Loadable IsLoading="IsLoading">
        @if (IsApplicationLoaded)
        {
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                           <MudItem>
                                <MudText Typo="Typo.h5">@ApplicationName</MudText>
                                <MudText Typo="Typo.subtitle2">@DirectoryName</MudText>
                            </MudItem>
                            <MudItem>
                                <MudFab Color="Color.Primary" Size="Size.Small" Icon="@Icons.Material.Filled.Settings" aria-label="edit" OnClick="ShowManagementPage" />
                            </MudItem>
                            <MudItem>
                                <MudFab Color="Color.Primary" Size="Size.Small" Icon="@Icons.Material.Filled.Refresh" aria-label="refresh" OnClick="RefreshData" />
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                    <CardHeaderActions>
                    @if (AllowNewAccessReview)
                    {
                        <MudButton Color="Color.Primary" EndIcon="@Icons.Material.Filled.Add" aria-label="start" OnClick="StartReview" Class="mb-2">Start Review</MudButton>
                    }
                   @Actions
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudTabs Elevation="1" Rounded="true" PanelClass="mt-6">
                        <MudTabPanel Text="General">
                             <AttributeCard Data="UserAttributes"/>
                        </MudTabPanel>
                        <MudTabPanel Text="Owners">
                            <DirectoryObjectCards Data="OwnersByType" Type="@AccessReviewActionObjectTypes.Owner" ReadOnly="@ReadOnly" OnItemRemoved="OnItemRemoved" OnItemAdded="OnItemAdded"/>
                        </MudTabPanel> 
                        <MudTabPanel Text="Secrets">
                            <ApplicationSecretCards Data="SecretsByType" ReadOnly="@ReadOnly" OnItemRemoved="OnItemRemoved" OnItemAdded="OnItemAdded"/>
                        </MudTabPanel>
                         <MudTabPanel Text="Permissions">
                            <ApplicationPermissionCards Data="PermissionsByResource" ReadOnly="@ReadOnly" OnItemRemoved="OnItemRemoved" OnItemAdded="OnItemAdded"/>
                        </MudTabPanel>
                        <MudTabPanel Text="Roles">
                            <RoleCards Data="RolesByType" ReadOnly="true" OnItemRemoved="OnItemRemoved" OnItemAdded="OnItemAdded"/>
                        </MudTabPanel>
                    </MudTabs>

                </MudCardContent>
            </MudCard>
        }
    </Loadable>