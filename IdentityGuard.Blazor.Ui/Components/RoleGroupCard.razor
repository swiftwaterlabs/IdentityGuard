@using IdentityGuard.Shared.Models
<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudList>
            @foreach(var item in Data.OrderBy(i=>i.DisplayName))
            {
                @if(!ShowDefaultAccess && item.Id == IdentityGuard.Shared.Models.Role.DefaultAccessId)
                {
                    // Show Nothing
                }
                else
                {
                    <MudListItem>
                        <RemovableItem Type="@AccessReviewActionObjectTypes.Role" 
                            Id="@item.Id" 
                            Text="@item.DisplayName"
                            Typo="@Typo.subtitle1"
                            Disabled="@ReadOnly"
                            OnItemRemoved="OnItemRemoved"
                            OnItemAdded="OnItemAdded"/>
                        <MudText Typo="Typo.body2">@item.Description</MudText>
                        
                    </MudListItem>
                }
            }
        </MudList>
    </MudCardContent>
</MudCard>