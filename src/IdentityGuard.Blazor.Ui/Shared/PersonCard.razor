<AuthorizeView>
    <Authorized>
        <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar>@context.User.Identity.Name.Substring(0, 1)</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@context.User.Identity.Name</MudText>
                </CardHeaderContent>
            </MudCardHeader>
        </MudCard>
    </Authorized>
    <NotAuthorized>
        
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}
